{% extends 'base.html.twig' %}

{% block title %}Secret - Machine de Rube Goldberg{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            margin: 0;
            padding: 0;
            background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
            font-family: 'Courier New', monospace;
            overflow-x: hidden;
        }
        
        .machine-container {
            position: relative;
            width: 100%;
            min-height: 100vh;
            padding: 100px 20px 50px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        
        .title {
            color: #0ff;
            text-align: center;
            font-size: 2.5rem;
            text-shadow: 0 0 20px #0ff;
            margin-bottom: 20px;
            animation: glow 2s ease-in-out infinite;
        }
        
        .subtitle {
            color: #0f0;
            text-align: center;
            margin-bottom: 40px;
            font-size: 1.2rem;
        }
        
        @keyframes glow {
            0%, 100% { text-shadow: 0 0 20px #0ff; }
            50% { text-shadow: 0 0 40px #0ff, 0 0 60px #0ff; }
        }
        
        .machine-stage {
            position: relative;
            width: 90%;
            max-width: 1200px;
            min-height: 600px;
            background: rgba(0, 20, 40, 0.95);
            border: 3px solid #0ff;
            border-radius: 20px;
            padding: 40px;
            box-shadow: 0 0 40px rgba(0, 255, 255, 0.4), inset 0 0 30px rgba(0, 0, 0, 0.5);
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .stage-content {
            width: 100%;
            position: relative;
        }
        
        .step-wrapper {
            display: none;
            opacity: 0;
        }
        
        .step-wrapper.visible {
            display: block;
            opacity: 1;
        }
        
        .step-wrapper.entering {
            animation: slideInFromRight 1s ease-out forwards;
        }
        
        .step-wrapper.exiting {
            animation: slideOutToLeft 0.8s ease-in forwards;
        }
        
        @keyframes slideInFromRight {
            0% {
                opacity: 0;
                transform: translateX(100%) scale(0.8) rotateY(-20deg);
            }
            60% {
                opacity: 1;
                transform: translateX(-5%) scale(1.02) rotateY(2deg);
            }
            100% {
                opacity: 1;
                transform: translateX(0) scale(1) rotateY(0deg);
            }
        }
        
        @keyframes slideOutToLeft {
            0% {
                opacity: 1;
                transform: translateX(0) scale(1) rotateY(0deg);
            }
            100% {
                opacity: 0;
                transform: translateX(-100%) scale(0.8) rotateY(20deg);
            }
        }
        
        .step-wrapper {
            perspective: 1000px;
        }
        
        .step {
            width: 100%;
            padding: 30px;
            background: linear-gradient(135deg, rgba(0, 50, 100, 0.95), rgba(0, 30, 80, 0.95));
            border: 3px solid #0ff;
            border-radius: 15px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5);
            min-height: 300px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }
        
        .step.active {
            box-shadow: 0 0 40px #0f0, 0 0 60px rgba(0, 255, 0, 0.3);
            animation: pulse 2s ease-in-out infinite;
            border-color: #0f0;
        }
        
        @keyframes pulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.02); }
        }
        
        .step-title {
            color: #0ff;
            font-size: 1.5rem;
            margin-bottom: 10px;
        }
        
        .step-description {
            color: #fff;
            margin-bottom: 15px;
        }
        
        .interaction-button {
            background: linear-gradient(135deg, #00ff00, #00cc00);
            color: #000;
            border: none;
            padding: 15px 30px;
            font-size: 1.1rem;
            font-weight: bold;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s;
            box-shadow: 0 5px 15px rgba(0, 255, 0, 0.3);
        }
        
        .interaction-button:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(0, 255, 0, 0.5);
        }
        
        .interaction-button:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }
        
        .animation-zone {
            position: relative;
            height: 200px;
            margin: 20px 0;
            border: 2px dashed #0ff;
            border-radius: 10px;
            overflow: hidden;
        }
        
        .ball {
            position: absolute;
            width: 40px;
            height: 40px;
            background: radial-gradient(circle at 30% 30%, #ff0, #f00);
            border-radius: 50%;
            box-shadow: 0 0 20px rgba(255, 0, 0, 0.8);
        }
        
        .gear {
            position: absolute;
            width: 80px;
            height: 80px;
            background: radial-gradient(circle, #0ff 0%, #088 50%, #044 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 0 20px rgba(0, 255, 255, 0.5), inset 0 0 20px rgba(0, 0, 0, 0.5);
        }
        
        .gear::before {
            content: '';
            position: absolute;
            width: 100%;
            height: 100%;
            background: 
                linear-gradient(0deg, transparent 40%, #0ff 40%, #0ff 60%, transparent 60%),
                linear-gradient(90deg, transparent 40%, #0ff 40%, #0ff 60%, transparent 60%),
                linear-gradient(45deg, transparent 40%, #088 40%, #088 60%, transparent 60%),
                linear-gradient(-45deg, transparent 40%, #088 40%, #088 60%, transparent 60%);
            border-radius: 50%;
        }
        
        .gear::after {
            content: '';
            position: absolute;
            width: 30px;
            height: 30px;
            background: #000;
            border: 3px solid #0ff;
            border-radius: 50%;
            box-shadow: inset 0 0 10px rgba(0, 255, 255, 0.8);
        }
        
        .gear.spinning {
            animation: spin 2s linear infinite;
        }
        
        @keyframes spin {
            from { transform: rotate(0deg); }
            to { transform: rotate(360deg); }
        }
        
        .rope {
            width: 12px;
            background: linear-gradient(180deg, #654321, #432110);
            border: 2px solid #321000;
            border-radius: 6px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
            position: relative;
        }
        
        .rope-handle {
            position: absolute;
            bottom: -25px;
            left: 50%;
            transform: translateX(-50%);
            width: 50px;
            height: 50px;
            background: radial-gradient(circle, #ff0000, #cc0000);
            border: 4px solid #fff;
            border-radius: 50%;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.6), inset 0 -3px 10px rgba(0, 0, 0, 0.3);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
            cursor: grab;
            user-select: none;
            transition: transform 0.2s;
        }
        
        .rope-handle:hover {
            transform: translateX(-50%) scale(1.1);
            box-shadow: 0 10px 25px rgba(255, 0, 0, 0.5), inset 0 -3px 10px rgba(0, 0, 0, 0.3);
        }
        
        .rope-handle:active {
            cursor: grabbing;
            transform: translateX(-50%) scale(0.95);
        }
        
        .rope-handle::before {
            content: 'üîª';
            filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.3));
        }
        

        
        .domino {
            position: absolute;
            width: 20px;
            height: 60px;
            background: linear-gradient(135deg, #fff, #ccc);
            border: 2px solid #000;
            border-radius: 3px;
            transition: transform 0.5s;
        }
        
        .domino.falling {
            animation: fall 0.5s forwards;
        }
        
        @keyframes fall {
            to { transform: rotate(90deg) translateX(30px); }
        }
        
        .laser {
            position: absolute;
            height: 3px;
            background: linear-gradient(90deg, transparent, #f00, transparent);
            box-shadow: 0 0 10px #f00;
            opacity: 0;
        }
        
        .laser.active {
            opacity: 1;
            animation: laser-shoot 1s forwards;
        }
        
        @keyframes laser-shoot {
            from { width: 0; }
            to { width: 100%; }
        }
        
        .progress-bar {
            width: 100%;
            height: 30px;
            background: rgba(0, 0, 0, 0.5);
            border: 2px solid #0ff;
            border-radius: 15px;
            overflow: hidden;
            margin: 20px 0;
        }
        
        .progress-fill {
            height: 100%;
            background: linear-gradient(90deg, #0f0, #0ff);
            width: 0%;
            transition: width 0.5s;
            box-shadow: 0 0 10px #0f0;
        }
        
        .final-message {
            display: none;
            text-align: center;
            padding: 40px;
            background: rgba(0, 255, 0, 0.1);
            border: 3px solid #0f0;
            border-radius: 15px;
            margin-top: 30px;
        }
        
        .final-message.show {
            display: block;
            animation: finalReveal 1s ease-out;
        }
        
        @keyframes finalReveal {
            from { opacity: 0; transform: scale(0.5); }
            to { opacity: 1; transform: scale(1); }
        }
        
        .final-message h2 {
            color: #0f0;
            font-size: 3rem;
            text-shadow: 0 0 30px #0f0;
            margin-bottom: 20px;
        }
        
        .particle {
            position: absolute;
            width: 10px;
            height: 10px;
            background: #0ff;
            border-radius: 50%;
            pointer-events: none;
        }
        
        .transition-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: radial-gradient(circle at center, rgba(0, 255, 0, 0.2), transparent);
            pointer-events: none;
            opacity: 0;
            z-index: 1000;
        }
        
        .transition-overlay.active {
            animation: transitionPulse 1s ease-out;
        }
        
        @keyframes transitionPulse {
            0% {
                opacity: 0;
                transform: scale(0);
            }
            50% {
                opacity: 1;
                transform: scale(2);
            }
            100% {
                opacity: 0;
                transform: scale(3);
            }
        }
        
        .connecting-line {
            position: absolute;
            height: 4px;
            background: linear-gradient(90deg, #0f0, #0ff, #0f0);
            box-shadow: 0 0 10px #0f0;
            opacity: 0;
            z-index: 100;
        }
        
        .connecting-line.active {
            animation: lineExpand 0.8s ease-out forwards;
        }
        
        @keyframes lineExpand {
            0% {
                width: 0;
                opacity: 1;
            }
            100% {
                width: 100%;
                opacity: 0;
            }
        }
    </style>
{% endblock %}

