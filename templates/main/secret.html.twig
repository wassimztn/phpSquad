<script>
    let currentStep = 0;
    const totalSteps = 12;
    let isDragging = false;
    let startY = 0;
    let ropeHeight = 80;
    
    function updateProgress() {
        const progress = (currentStep / totalSteps) * 100;
        document.getElementById('progressFill').style.width = progress + '%';
    }
    
    function completeStep(stepNum) {
        const currentWrapper = document.getElementById('wrapper' + stepNum);
        const currentStepEl = document.getElementById('step' + stepNum);
        
        currentStepEl.classList.remove('active');
        
        // Effet de transition visuel
        const overlay = document.getElementById('transitionOverlay');
        overlay.classList.add('active');
        setTimeout(() => {
            overlay.classList.remove('active');
        }, 1000);
        
        // Cr√©er une ligne de connexion
        const machineStage = document.querySelector('.machine-stage');
        const line = document.createElement('div');
        line.className = 'connecting-line active';
        line.style.top = '50%';
        line.style.left = '0';
        machineStage.appendChild(line);
        setTimeout(() => line.remove(), 1000);
        
        currentStep = stepNum + 1;
        updateProgress();
        
        if (stepNum < totalSteps - 1) {
            // Animation de sortie
            currentWrapper.classList.add('exiting');
            
            setTimeout(() => {
                // Masquer l'√©tape actuelle
                currentWrapper.classList.remove('visible');
                currentWrapper.classList.remove('exiting');
                
                // Pr√©parer et afficher la prochaine √©tape
                const nextWrapper = document.getElementById('wrapper' + (stepNum + 1));
                const nextStep = document.getElementById('step' + (stepNum + 1));
                if (nextWrapper && nextStep) {
                    nextWrapper.classList.add('visible');
                    nextWrapper.classList.add('entering');
                    
                    setTimeout(() => {
                        nextWrapper.classList.remove('entering');
                        nextStep.classList.add('active');
                    }, 1000);
                }
            }, 800);
        }
    }
    
    // Gestion de la corde
    const ropeHandle = document.getElementById('ropeHandle');
    const rope = document.getElementById('rope');
    
    if (ropeHandle) {
        ropeHandle.addEventListener('mousedown', (e) => {
            if (currentStep === 0) {
                isDragging = true;
                startY = e.clientY;
                e.preventDefault();
            }
        });
        
        // Support tactile
