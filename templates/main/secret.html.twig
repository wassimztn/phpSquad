    // √âtape 8: Labyrinthe
    function startMaze() {
        const canvas = document.getElementById('mazeCanvas');
        const ctx = canvas.getContext('2d');
        
        const walls = [
            {x: 0, y: 0, w: 300, h: 15},
            {x: 0, y: 0, w: 15, h: 300},
            {x: 0, y: 285, w: 300, h: 15},
            {x: 285, y: 0, w: 15, h: 300},
            {x: 75, y: 75, w: 15, h: 150},
            {x: 150, y: 75, w: 15, h: 150},
            {x: 225, y: 75, w: 15, h: 150},
            {x: 75, y: 75, w: 90, h: 15},
            {x: 150, y: 210, w: 90, h: 15}
        ];
        
        let ball = {x: 40, y: 40, r: 12};
        let target = {x: 255, y: 255, r: 18};
        
        function draw() {
            ctx.fillStyle = '#000';
            ctx.fillRect(0, 0, 300, 300);
            
            // Murs
            ctx.fillStyle = '#f00';
            walls.forEach(wall => {
                ctx.fillRect(wall.x, wall.y, wall.w, wall.h);
                ctx.shadowColor = '#f00';
                ctx.shadowBlur = 10;
            });
            ctx.shadowBlur = 0;
            
            // Sortie
            ctx.fillStyle = '#ff0';
            ctx.beginPath();
            ctx.arc(target.x, target.y, target.r, 0, Math.PI * 2);
            ctx.fill();
            
            // Bille
            ctx.fillStyle = '#0f0';
            ctx.beginPath();
            ctx.arc(ball.x, ball.y, ball.r, 0, Math.PI * 2);
            ctx.fill();
            ctx.shadowColor = '#0f0';
            ctx.shadowBlur = 15;
            ctx.fill();
            ctx.shadowBlur = 0;
        }
        
        function checkCollision(x, y) {
            return walls.some(wall => 
                x - ball.r < wall.x + wall.w &&
                x + ball.r > wall.x &&
                y - ball.r < wall.y + wall.h &&
                y + ball.r > wall.y
            );
        }
        
        function checkWin() {
            const dx = ball.x - target.x;
            const dy = ball.y - target.y;
            return Math.sqrt(dx * dx + dy * dy) < ball.r + target.r;
        }
        
        let mazeActive = true;
        const speed = 5;
        
        function handleKeyDown(e) {
            if (!mazeActive) return;
            
            let newX = ball.x;
            let newY = ball.y;
            
            if (e.key === 'ArrowUp') {
                newY -= speed;
                e.preventDefault();
            } else if (e.key === 'ArrowDown') {
                newY += speed;
                e.preventDefault();
            } else if (e.key === 'ArrowLeft') {
                newX -= speed;
                e.preventDefault();
            } else if (e.key === 'ArrowRight') {
                newX += speed;
                e.preventDefault();
            } else {
                return;
            }
            
            if (!checkCollision(newX, newY)) {
                ball.x = newX;
                ball.y = newY;
                
                if (checkWin()) {
                    canvas.style.border = '3px solid #0f0';
                    mazeActive = false;
                    document.removeEventListener('keydown', handleKeyDown);
                    setTimeout(() => {
                        completeStep(8);
                        startMathChallenge();
                    }, 500);
                } else {
                    draw();
                }
            } else {
                ball.x = 40;
                ball.y = 40;
                draw();
            }
        }
        
        document.addEventListener('keydown', handleKeyDown);
        draw();
    }
    
