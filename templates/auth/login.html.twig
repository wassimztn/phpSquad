{% extends 'base.html.twig' %}

{% block title %}Connexion - Combo Gaming{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            margin: 0;
            padding: 0;
            background: linear-gradient(135deg, #0a0e27 0%, #1a1a3e 50%, #0f1b3c 100%);
            background-attachment: fixed;
            font-family: 'Courier New', monospace;
            color: #0f0;
            min-height: 100vh;
            overflow-x: hidden;
        }
        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-image: 
                radial-gradient(circle at 20% 50%, rgba(0, 255, 100, 0.1) 0%, transparent 50%),
                linear-gradient(rgba(0, 255, 100, 0.02) 1px, transparent 1px),
                linear-gradient(90deg, rgba(0, 255, 100, 0.02) 1px, transparent 1px);
            background-size: 100% 100%, 50px 50px, 50px 50px;
            pointer-events: none;
            z-index: 0;
        }
        .auth-container {
            position: relative;
            z-index: 1;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            padding: 20px;
        }
        .auth-box {
            background: rgba(0, 20, 0, 0.95);
            border: 3px solid #0f0;
            border-radius: 10px;
            padding: 40px;
            max-width: 500px;
            width: 100%;
            box-shadow: 
                0 0 30px rgba(0, 255, 0, 0.5),
                inset 0 0 20px rgba(0, 255, 0, 0.05);
        }
        .auth-title {
            text-align: center;
            font-size: 2.5rem;
            margin-bottom: 10px;
            text-shadow: 0 0 20px #0f0;
        }
        .auth-subtitle {
            text-align: center;
            font-size: 1rem;
            margin-bottom: 30px;
            opacity: 0.8;
        }
        .form-group {
            margin-bottom: 25px;
        }
        .form-label {
            display: block;
            margin-bottom: 8px;
            font-size: 1.1rem;
        }
        .form-input {
            width: 100%;
            padding: 12px;
            background: rgba(0, 50, 0, 0.5);
            border: 2px solid #0f0;
            border-radius: 5px;
            color: #0f0;
            font-family: 'Courier New', monospace;
            font-size: 1rem;
            box-sizing: border-box;
        }
        .form-input:focus {
            outline: none;
            box-shadow: 0 0 15px rgba(0, 255, 0, 0.5);
        }
        .combo-display {
            background: rgba(0, 0, 0, 0.7);
            border: 2px solid #0f0;
            border-radius: 5px;
            padding: 20px;
            min-height: 100px;
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            align-items: center;
            justify-content: center;
            margin-top: 10px;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        .combo-display:focus {
            outline: none;
            box-shadow: 0 0 15px rgba(0, 255, 0, 0.5);
            border-color: #0f0;
        }
        .combo-display.correct {
            border-color: #0f0;
            background: rgba(0, 100, 0, 0.3);
        }
        .combo-display.incorrect {
            border-color: #f00;
            background: rgba(100, 0, 0, 0.3);
        }
        .combo-controls {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 10px;
        }
        .btn-reset {
            background: rgba(255, 100, 100, 0.2);
            border: 2px solid #f00;
            color: #f00;
            padding: 8px 15px;
            border-radius: 5px;
            cursor: pointer;
            font-family: 'Courier New', monospace;
            transition: all 0.3s ease;
        }
        .btn-reset:hover {
            background: rgba(255, 100, 100, 0.4);
            box-shadow: 0 0 15px rgba(255, 0, 0, 0.5);
            transform: scale(1.05);
        }
        .combo-counter {
            color: #0f0;
            font-size: 0.9rem;
            opacity: 0.8;
        }
        .key-icon {
            background: rgba(0, 255, 0, 0.2);
            border: 2px solid #0f0;
            border-radius: 5px;
            padding: 10px 15px;
            font-size: 1.2rem;
            font-weight: bold;
            animation: keyPop 0.3s ease;
            box-shadow: 0 0 10px rgba(0, 255, 0, 0.5);
        }
        @keyframes keyPop {
            0% { transform: scale(0); }
            50% { transform: scale(1.2); }
            100% { transform: scale(1); }
        }
        
        /* Effet combo joufflu */
        @keyframes comboPop {
            0% {
                transform: scale(0) translateY(0);
                opacity: 1;
            }
            50% {
                transform: scale(1.3);
            }
            100% {
                transform: scale(1) translateY(-40px);
                opacity: 0;
            }
        }
        
        /* Tremblement de l'√©cran */
        @keyframes screenShake {
            0% { transform: translate(0, 0) rotate(0deg); }
            10% { transform: translate(-2px, -2px) rotate(0.5deg); }
            20% { transform: translate(2px, -2px) rotate(-0.5deg); }
            30% { transform: translate(-2px, 2px) rotate(0.5deg); }
            40% { transform: translate(2px, 2px) rotate(-0.5deg); }
            50% { transform: translate(-2px, 0) rotate(0.5deg); }
            60% { transform: translate(2px, 0) rotate(-0.5deg); }
            70% { transform: translate(0, -2px) rotate(0deg); }
            80% { transform: translate(0, 2px) rotate(0deg); }
            90% { transform: translate(-1px, -1px) rotate(0deg); }
            100% { transform: translate(0, 0) rotate(0deg); }
        }
        
        @keyframes screenShakeIntense {
            0% { transform: translate(0, 0) rotate(0deg); }
            10% { transform: translate(-4px, -4px) rotate(1deg); }
            20% { transform: translate(4px, -4px) rotate(-1deg); }
            30% { transform: translate(-4px, 4px) rotate(1deg); }
            40% { transform: translate(4px, 4px) rotate(-1deg); }
            50% { transform: translate(-4px, 0) rotate(1deg); }
            60% { transform: translate(4px, 0) rotate(-1deg); }
            70% { transform: translate(0, -4px) rotate(0deg); }
            80% { transform: translate(0, 4px) rotate(0deg); }
            90% { transform: translate(-2px, -2px) rotate(0deg); }
            100% { transform: translate(0, 0) rotate(0deg); }
        }
        
        @keyframes screenShakeVeryIntense {
            0% { transform: translate(0, 0) rotate(0deg); }
            10% { transform: translate(-6px, -6px) rotate(1.5deg); }
            20% { transform: translate(6px, -6px) rotate(-1.5deg); }
            30% { transform: translate(-6px, 6px) rotate(1.5deg); }
            40% { transform: translate(6px, 6px) rotate(-1.5deg); }
            50% { transform: translate(-6px, 0) rotate(1.5deg); }
            60% { transform: translate(6px, 0) rotate(-1.5deg); }
            70% { transform: translate(0, -6px) rotate(0deg); }
            80% { transform: translate(0, 6px) rotate(0deg); }
            90% { transform: translate(-3px, -3px) rotate(0deg); }
            100% { transform: translate(0, 0) rotate(0deg); }
        }
        
        .screen-shake {
            animation: screenShake 0.4s;
        }
        
        .screen-shake-intense {
            animation: screenShakeIntense 0.4s;
        }
        
        .screen-shake-very-intense {
            animation: screenShakeVeryIntense 0.4s;
        }

        .combo-pop {
            position: fixed;
            font-size: 1.5rem;
            font-weight: 900;
            color: #00ff00;
            text-shadow: 
                0 0 10px #00ff00,
                0 0 20px #00aa00;
            pointer-events: none;
            animation: comboPop 0.6s ease-out forwards;
            z-index: 5000;
        }
        .combo-hint {
            text-align: center;
            margin-top: 10px;
            font-size: 0.9rem;
            opacity: 0.7;
        }
        .combo-status {
            text-align: center;
            margin-top: 15px;
            font-size: 1.1rem;
            font-weight: bold;
        }
        .btn-submit {
            width: 100%;
            padding: 15px;
            background: linear-gradient(135deg, #0f9999 0%, #0d7a7a 100%);
            border: 2px solid #0f0;
            border-radius: 5px;
            color: #fff;
            font-family: 'Courier New', monospace;
            font-size: 1.2rem;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s ease;
            text-shadow: 0 0 10px rgba(0, 255, 0, 0.8);
        }
        .btn-submit:hover {
            background: linear-gradient(135deg, #0d7a7a 0%, #0f9999 100%);
            box-shadow: 0 0 20px rgba(0, 255, 0, 0.7);
            transform: translateY(-2px);
        }
        .btn-submit:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }
        .message {
            margin-top: 20px;
            padding: 15px;
            border-radius: 5px;
            text-align: center;
            display: none;
        }
        .message.success {
            background: rgba(0, 255, 0, 0.2);
            border: 2px solid #0f0;
        }
        .message.error {
            background: rgba(255, 0, 0, 0.2);
            border: 2px solid #f00;
            color: #f00;
        }
        .link-register {
            text-align: center;
            margin-top: 20px;
        }
        .link-register a {
            color: #0f0;
            text-decoration: none;
            border-bottom: 1px solid #0f0;
        }
        .link-register a:hover {
            text-shadow: 0 0 10px #0f0;
        }
        .attempts-counter {
            text-align: center;
            margin-top: 10px;
            font-size: 0.9rem;
            opacity: 0.6;
        }
        
        /* === Animation Victoire === */
        .victory-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, rgba(0, 30, 60, 0.9) 0%, rgba(5, 10, 30, 0.95) 100%);
            z-index: 9999;
            display: none;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            overflow: hidden;
        }
        
        .victory-overlay.active {
            display: flex;
        }
        
        .character-container {
            position: relative;
            width: 100%;
            height: 100%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            z-index: 1;
        }
        
        .hero-display {
            position: relative;
            width: 500px;
            height: 400px;
            margin-bottom: 40px;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        
        .ryu-sprite {
            position: absolute;
            width: 280px;
            height: 360px;
            left: 50%;
            top: 50%;
            transform: translate(-50%, -50%);
            background-image: url('/images/ken.gif');
            background-size: contain;
            background-repeat: no-repeat;
            background-position: center;
            image-rendering: pixelated;
            image-rendering: -moz-crisp-edges;
            image-rendering: crisp-edges;
            animation: ryuShoryuken 1.2s ease-out 1.2s forwards;
            filter: drop-shadow(0 8px 25px rgba(0, 0, 0, 0.7));
        }
        
        /* Effet de lueur √©nerg√©tique autour du sprite */
        .ryu-sprite::before {
            content: '';
            position: absolute;
            width: 120%;
            height: 120%;
            left: -10%;
            top: -10%;
            background: radial-gradient(ellipse at center, 
                rgba(255, 150, 0, 0.4) 0%, 
                rgba(255, 100, 0, 0.2) 40%, 
                transparent 70%);
            animation: energyPulse 0.6s ease-out 0.5s;
            opacity: 0;
            border-radius: 50%;
            filter: blur(15px);
            display: none;
        }
        
        @keyframes energyPulse {
            0% {
                opacity: 0;
                transform: scale(0.5);
            }
            50% {
                opacity: 1;
                transform: scale(1.2);
            }
            100% {
                opacity: 0;
                transform: scale(1.5);
            }
        }
        
        /* Tra√Æn√©e de mouvement */
        .ryu-sprite::after {
            content: '';
            position: absolute;
            width: 100%;
            height: 100%;
            left: 0;
            top: 0;
            background-image: url('/images/ken.gif');
            background-size: contain;
            background-repeat: no-repeat;
            background-position: center;
            image-rendering: pixelated;
            image-rendering: -moz-crisp-edges;
            image-rendering: crisp-edges;
            opacity: 0;
            animation: motionTrail 0.8s ease-out 0.6s;
            filter: blur(3px);
            display: none;
        }
        
        @keyframes motionTrail {
            0% {
                opacity: 0.6;
                transform: translateY(30px) scale(0.95);
            }
            100% {
                opacity: 0;
                transform: translateY(-50px) scale(1.1);
            }
        }
        
        @keyframes ryuShoryuken {
            0% {
                opacity: 1;
                transform: translate(-50%, -50%) scale(1);
            }
            30% {
                opacity: 1;
                transform: translate(-50%, -50%) scale(1);
            }
            50% {
                transform: translate(-50%, -50%) scale(1);
            }
            100% {
                opacity: 1;
                transform: translate(-50%, -50%) scale(1);
            }
        }
        
        /* Vague d'√©nergie du Shoryuken */
        .shoryuken-wave {
            position: absolute;
            width: 100px;
            height: 150px;
            background: linear-gradient(135deg, rgba(255, 100, 0, 0.8) 0%, rgba(255, 200, 0, 0.4) 100%);
            border: 3px solid rgba(255, 150, 0, 0.9);
            border-radius: 50% 50% 30% 30%;
            top: -100px;
            right: 80px;
            animation: waveRise 1s ease-out 0.7s forwards;
            opacity: 0;
            filter: drop-shadow(0 0 20px rgba(255, 150, 0, 0.9));
            transform: rotate(-15deg);
            display: none;
        }
        
        @keyframes waveRise {
            0% {
                opacity: 1;
                transform: rotate(-15deg) translateY(0) scale(0.5);
            }
            50% {
                opacity: 1;
                transform: rotate(-15deg) translateY(-150px) scale(1);
            }
            100% {
                opacity: 0;
                transform: rotate(-15deg) translateY(-300px) scale(1.2);
            }
        }
        
        /* Particules de feu - Am√©lior√©es */
        .fire-particle {
            position: absolute;
            width: 14px;
            height: 14px;
            top: -80px;
            right: 90px;
            animation: fireExplode 1.1s ease-out 0.8s forwards;
            opacity: 0;
        }
        
        .fire-particle::before {
            content: '';
            position: absolute;
            width: 100%;
            height: 100%;
            background: radial-gradient(circle at 35% 35%, #ffff99 0%, #ffff00 20%, #ffaa00 45%, #ff6600 70%, #cc3300 100%);
            border-radius: 50%;
            filter: drop-shadow(0 0 6px #ff5500) drop-shadow(0 0 12px #ff2200);
            box-shadow: 
                inset -2px -2px 5px rgba(0, 0, 0, 0.4),
                inset 2px 2px 4px rgba(255, 220, 0, 0.7),
                0 0 20px rgba(255, 100, 0, 0.9),
                0 0 30px rgba(255, 50, 0, 0.6);
        }
        
        .fire-particle::after {
            content: '';
            position: absolute;
            width: 65%;
            height: 65%;
            top: 17.5%;
            left: 17.5%;
            background: radial-gradient(circle, rgba(255, 255, 200, 0.95) 0%, rgba(255, 180, 0, 0.5) 60%, transparent 100%);
            border-radius: 50%;
            animation: fireFlicker 0.2s infinite;
        }
        
        @keyframes fireFlicker {
            0%, 100% { opacity: 1; transform: scale(1); }
            50% { opacity: 0.8; transform: scale(0.95); }
        }
        
        @keyframes fireExplode {
            0% {
                opacity: 1;
                transform: translate(0, 0) scale(1) rotate(0deg);
            }
            40% {
                opacity: 1;
                transform: translate(var(--tx) * 0.4, var(--ty) * 0.4) scale(1.2) rotate(120deg);
            }
            100% {
                opacity: 0;
                transform: translate(var(--tx), var(--ty)) scale(0.3) rotate(360deg);
            }
        }
        
        /* Impact circulaire */
        .impact-ring {
            position: absolute;
            width: 80px;
            height: 80px;
            border: 2px solid rgba(255, 150, 0, 0.8);
            border-radius: 50%;
            top: -60px;
            right: 85px;
            animation: impactExpand 0.8s ease-out 0.75s forwards;
            opacity: 0;
            display: none;
        }
        
        @keyframes impactExpand {
            0% {
                opacity: 1;
                width: 80px;
                height: 80px;
                box-shadow: 0 0 15px rgba(255, 150, 0, 0.8);
            }
            100% {
                opacity: 0;
                width: 200px;
                height: 200px;
                box-shadow: 0 0 5px rgba(255, 150, 0, 0.2);
            }
        }
        
        .text-container {
            position: relative;
            z-index: 10;
            text-align: center;
        }
        
        .victory-text {
            font-size: 3.5rem;
            font-weight: 900;
            color: #ffaa00;
            text-shadow: 
                0 0 20px #ffaa00,
                0 0 40px rgba(255, 150, 0, 0.8);
            font-family: Arial, sans-serif;
            letter-spacing: 2px;
            margin: 0;
            padding: 0;
            opacity: 0;
            animation: textSlide 0.6s cubic-bezier(0.68, -0.55, 0.265, 1.55) 0s forwards;
        }
        
        @keyframes textSlide {
            0% {
                opacity: 0;
                transform: translateY(40px);
            }
            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        .victory-subtext {
            font-size: 1.2rem;
            color: #ff6600;
            text-shadow: 0 0 10px #ff6600;
            font-family: 'Courier New', monospace;
            margin-top: 15px;
            letter-spacing: 1px;
            opacity: 0;
            animation: textSlide 0.6s cubic-bezier(0.68, -0.55, 0.265, 1.55) 0.2s forwards;
        }
    </style>
{% endblock %}

