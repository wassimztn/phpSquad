            <h2 class="victory-text">üî• SHORYUKEN ! üî•</h2>
            <p class="victory-subtext">Acc√®s Autoris√© - Bienvenue !</p>
        </div>
    </div>
</div>

<script>
(function() {
    const comboDisplay = document.getElementById('comboDisplay');
    const comboSecret = document.getElementById('comboSecret');
    const comboStatus = document.getElementById('comboStatus');
    const submitBtn = document.getElementById('submitBtn');
    const message = document.getElementById('message');
    const attemptsDisplay = document.getElementById('attempts');
    const resetBtn = document.getElementById('resetCombo');
    const comboCounter = document.getElementById('comboCounter');
    let comboKeys = [];
    let attempts = 0;
    let isComboActive = false;
    
    const newComboDisplay = comboDisplay.cloneNode(true);
    comboDisplay.parentNode.replaceChild(newComboDisplay, comboDisplay);
    const comboDisplayClean = document.getElementById('comboDisplay');
    
    const newResetBtn = resetBtn.cloneNode(true);
    resetBtn.parentNode.replaceChild(newResetBtn, resetBtn);
    const resetBtnClean = document.getElementById('resetCombo');
    
    const allowedKeys = ['ArrowUp', 'ArrowDown', 'ArrowLeft', 'ArrowRight', 'u', 'U', 'i', 'I', 'j', 'J', 'k', 'K'];
    
    const keyMap = {
        'ArrowUp': '‚Üë',
        'ArrowDown': '‚Üì',
        'ArrowLeft': '‚Üê',
        'ArrowRight': '‚Üí',
        'u': 'U', 'U': 'U',
        'i': 'I', 'I': 'I',
        'j': 'J', 'J': 'J',
        'k': 'K', 'K': 'K'
    };
    
    comboDisplayClean.addEventListener('click', () => {
        comboDisplayClean.focus();
    });
    
    comboDisplayClean.addEventListener('focus', () => {
        isComboActive = true;
        if (comboKeys.length === 0) {
            comboDisplayClean.innerHTML = '<span style="opacity: 0.5;">‚úçÔ∏è Tapez votre combo...</span>';
        }
    });
    
    comboDisplayClean.addEventListener('blur', () => {
        isComboActive = false;
    });
    
    comboDisplayClean.addEventListener('keydown', (e) => {
        if (!isComboActive) return;
        
        // Handle Enter key to submit
        if (e.key === 'Enter') {
            e.preventDefault();
            if (comboKeys.length >= 3 && !submitBtn.disabled) {
                submitBtn.click();
            }
            return;
        }
        
        const key = e.key;
        
        if (!allowedKeys.includes(key)) {
            e.preventDefault();
            comboDisplayClean.style.borderColor = '#f00';
            setTimeout(() => {
                comboDisplayClean.style.borderColor = '#0f0';
            }, 200);
            return;
        }
        
        e.preventDefault();
        
        comboKeys.push(key);
        
        const displayKey = keyMap[key] || key.toUpperCase();
        
        if (comboKeys.length === 1) {
            comboDisplayClean.innerHTML = '';
            comboDisplayClean.classList.remove('correct', 'incorrect');
        }
        
        const keyIcon = document.createElement('div');
        keyIcon.className = 'key-icon';
        keyIcon.textContent = displayKey;
        comboDisplayClean.appendChild(keyIcon);
        
        // Cr√©er effet combo pop
        const rect = comboDisplayClean.getBoundingClientRect();
        const comboPop = document.createElement('div');
        comboPop.className = 'combo-pop';
        comboPop.textContent = displayKey;
        comboPop.style.left = (rect.left + rect.width / 2) + 'px';
        comboPop.style.top = (rect.top + rect.height / 2) + 'px';
        document.body.appendChild(comboPop);
        
        // Ajouter un "COMBO x" tous les 3 touches
        if (comboKeys.length % 3 === 0) {
            const comboText = document.createElement('div');
            comboText.className = 'combo-pop';
            comboText.textContent = 'üî• COMBO x' + Math.floor(comboKeys.length / 3);
            comboText.style.left = (rect.left + rect.width / 2) + 'px';
            comboText.style.top = (rect.top + rect.height / 2 - 30) + 'px';
            comboText.style.fontSize = '2rem';
            document.body.appendChild(comboText);
            
            // Animation pulsation du display
            comboDisplayClean.style.boxShadow = '0 0 30px #00ff00, 0 0 60px #00aa00';
            setTimeout(() => {
                comboDisplayClean.style.boxShadow = 'initial';
            }, 200);
            
            // Tremblement de l'√©cran bas√© sur le combo count
            const authContainer = document.querySelector('.auth-container');
            if (authContainer) {
                const comboCount = Math.floor(comboKeys.length / 3);
                let shakeClass = 'screen-shake';
                
                if (comboCount >= 3) {
                    shakeClass = 'screen-shake-very-intense';
                } else if (comboCount >= 2) {
                    shakeClass = 'screen-shake-intense';
                } else {
                    shakeClass = 'screen-shake';
                }
                
                authContainer.classList.add(shakeClass);
                setTimeout(() => {
                    authContainer.classList.remove(shakeClass);
                }, 400);
            }
        }
        
        // Nettoyer apr√®s animation
        setTimeout(() => {
            comboPop.remove();
        }, 600);
        
        comboSecret.value = comboKeys.join(',');
        
        // Tremblement √† partir de 3 touches - s'intensifie √† chaque touche suppl√©mentaire
        if (comboKeys.length >= 3) {
            const authContainer = document.querySelector('.auth-container');
            if (authContainer) {
                const extraTouches = comboKeys.length - 2; // 3√®me touche = 1, 4√®me = 2, etc
                let shakeClass = 'screen-shake';
                
                if (extraTouches >= 4) {
                    shakeClass = 'screen-shake-very-intense';
                } else if (extraTouches >= 2) {
                    shakeClass = 'screen-shake-intense';
                } else {
                    shakeClass = 'screen-shake';
                }
                
                authContainer.classList.add(shakeClass);
                setTimeout(() => {
                    authContainer.classList.remove(shakeClass);
                }, 400);
            }
        }
        
        updateCounter();
        
        if (comboKeys.length >= 3) {
            submitBtn.disabled = false;
            comboStatus.textContent = `${comboKeys.length} touches entr√©es`;
            comboStatus.style.color = '#0f0';
        }
    });
    
    resetBtnClean.addEventListener('click', () => {
        resetCombo();
    });
    
    function resetCombo() {
        comboKeys = [];
        comboDisplayClean.innerHTML = '<span style="opacity: 0.5;">üëÜ Cliquez ici puis tapez votre combo...</span>';
        comboSecret.value = '';
        submitBtn.disabled = true;
        comboStatus.textContent = '';
        comboDisplayClean.classList.remove('correct', 'incorrect');
        updateCounter();
        comboDisplayClean.blur();
        isComboActive = false;
    }
    
    function updateCounter() {
        comboCounter.textContent = `${comboKeys.length} touches`;
    }
    
    document.getElementById('loginForm').addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const email = document.getElementById('email').value;
        const combo = comboSecret.value;
        
        if (!combo || comboKeys.length < 3) {
            showMessage('Entrez votre combo complet !', 'error');
            return;
        }
        
        submitBtn.disabled = true;
        submitBtn.textContent = '‚è≥ V√©rification...';
        attempts++;
        
        try {
            const response = await fetch('{{ path('app_login_verify') }}', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ email, combo })
            });
            
            const data = await response.json();
            
            if (data.success) {
                comboDisplayClean.classList.add('correct');
                comboStatus.textContent = '‚úÖ COMBO CORRECT !';
                comboStatus.style.color = '#0f0';
                showMessage('‚úÖ ' + data.message, 'success');
                
                showVictoryAnimation();
                
                setTimeout(() => {
                    window.location.href = '/main';
                }, 1900);
            } else {
                comboDisplayClean.classList.add('incorrect');
                comboStatus.textContent = '‚ùå COMBO INCORRECT !';
                comboStatus.style.color = '#f00';
                showMessage('‚ùå ' + data.message, 'error');
                attemptsDisplay.textContent = `Tentatives: ${attempts}`;
                
                setTimeout(() => {
                    comboKeys = [];
                    comboDisplayClean.innerHTML = '<span style="opacity: 0.5;">R√©essayez...</span>';
                    comboSecret.value = '';
                    submitBtn.disabled = true;
                    submitBtn.textContent = 'üîì Se connecter';
                    comboStatus.textContent = '';
                    comboDisplayClean.classList.remove('incorrect');
                }, 2000);
            }
        } catch (error) {
            showMessage('‚ùå Erreur de connexion au serveur', 'error');
            submitBtn.disabled = false;
            submitBtn.textContent = 'üîì Se connecter';
        }
    });
    
    function showMessage(text, type) {
        message.textContent = text;
        message.className = 'message ' + type;
        message.style.display = 'block';
    }
    
    function showVictoryAnimation() {
        console.log('showVictoryAnimation called');
        const overlay = document.getElementById('victoryOverlay');
        console.log('Overlay element:', overlay);
        overlay.classList.add('active');
        console.log('Active class added, overlay classList:', overlay.classList);
        
        // Freeze GIF after first complete loop
        const ryuSprite = document.querySelector('.ryu-sprite');
        if (ryuSprite) {
            // Wait for the GIF to complete one cycle (~1.5-2s typically)
            // Then replace with static image
            setTimeout(() => {
                const img = new Image();
                img.onload = function() {
                    const canvas = document.createElement('canvas');
                    canvas.width = img.width;
                    canvas.height = img.height;
                    const ctx = canvas.getContext('2d');
                    ctx.drawImage(img, 0, 0);
                    const frozenFrame = canvas.toDataURL();
                    ryuSprite.style.backgroundImage = `url(${frozenFrame})`;
                    console.log('GIF frozen after first loop');
                };
                img.src = '/images/ken.gif';
            }, 1600); // Freeze after first GIF loop completes
        }
        console.log('Animation complete');
    }
})();
</script>
